<%= form_for(@tutor) do |f| %>
  <% if @tutor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tutor.errors.count, "error") %> prohibited this tutor from being saved:</h2>

      <ul>
      <% @tutor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div  class="parallax-container">


         <div class="row ">
              <div class= "center col s12 m4 l10">
                <h3 class="header teal-text text-lighten-2">¡ Buscamos los mejores tutores !</h3>
              </div>
                   <div class="row center"> 
                        <img src='<%= asset_path 'utem1.png' %>'class="responsive-img"  class="thumb"  width="110" height="110"/>
                   </div>
                   <div class="parallax"><%= image_tag("a93.jpg") %></div>
                        <div class=" row">
                           <div class= "center col s12 m4 l10">
                            <h5 class="header green-text text-darken-1">Ingresa tus datos para ponernos en contacto contigo.</h5>
                           </div>
              </div>
         </div>
      





  <div class="row">
        <div class="input-field col s5 text-lighten-4">
          <i class="material-icons prefix">account_circle</i>
          <label for="name">Nombre</label>
          </br>
          <%=f.text_field :nombre,:maxlength => 25%>
        </div> 
        
        <div class="input-field col s5">
          <i class="material-icons prefix">account_circle</i>
          <label class="text-lighten-4" for="lastname">Apellido</label>
          </br>
          <%=f.text_field :apellido,:maxlength => 25 %>
        </div>            
  </div>

    <div class="row">

           <div class=" input-field col s10  text-lighten-4">

              <div class="control-group">
                    <div class="controls">
                    
                     <i class="material-icons prefix">business </i>
                     
                     <%= f.select(:carrera, options_for_select([['Ingeniería Civil Electrónica/Mecánica','Ingeniería Civil Electrónica/Mecánica'],['Ingeniería Informática/Civil en Computación ', 'Ingeniería Informática/Civil en Computación'], ['Ingeniería Industrial/Civil Industrial', 'Ingeniería Industrial/Civil Industrial'],['Ingeniería Química/Química Industrial/Biotecnología','Ingeniería Química/Química Industrial/Biotecnología'], ['Ingeniería en Geomensura/Transporte y Tránsito','Ingeniería en Geomensura/Transporte y Tránsito'],['Otro','Otro']]), {  prompt: 'Seleccione Carrera' }) %>
                    </div>
              </div>
          </div>
      </div>


    <div class="row">
        <div class="input-field col s10 text-lighten-4">
          <i class="material-icons prefix">picture_in_picture</i>
          <label for="name">Rut (Ej:123456789-0)</label>
          </br>
          <%=f.text_field :rut,:maxlength => 30%>
        </div> 
    </div>
    <div class="row">
        <div class="input-field col s10">
          <i class="material-icons prefix">markunread_mailbox</i>
          <label for="email">Email</label>
          </br>
          <%=f.text_field :email%>
        </div>            
    </div>

     

       <div class="row">

           <div class=" input-field col s10  text-lighten-4">

              <div class="control-group">
                    <div class="controls">
                     <i class="material-icons prefix">spellcheck</i>

                     <%= f.select(:asignatura, options_for_select([['Algebra I', 'Algebra I'], ['Calculo I', 'Calculo I'],['Química General', 'Química General'], ['Física Clásica', 'Física Clásica'], ['Otro', 'Otro']]), {  prompt: 'Seleccione Asignatura a realizar' }) %>
                    </div>
              </div>
           </div>
        </div>







    <div class="row">
           <div class = "button center col s5">
                <%=f.submit "Guardar" ,class:"btn center-align"%>
           </div>
              <div class = "button center col s5">
                <%= link_to 'Volver', welcome_index_path, class:"btn center-align"%>
              </div>
    </div>

  </div>
<%end%>   
